{% extends "_blank-layout.njk" %}

{% block main %}

<a class="login-logo" href="/">
    <img class="login-logo__image" src="/img/logo.png" alt="Samaritans"/>
</a>

<main class="block login login--thanks">
    <h1 class="login__thanks">Thanks!</h1>
    <p>We've sent a special link to <strong>{{ email }}</strong>.</p>
    <p>Click the link to confirm your address and finish logging in.</p>
</main>

<p class="login-help">Need help? <a href="mailto:volunteering@samaritans.org">Email us</a></p>

{% endblock %}
